				   <td><label for="lastname">Achternaam:</label></td>
				   <td><?php echo $this->form->getElement('lastname'); ?></td>
			    </tr>
			    <tr>
				   <td><label for="email">Email:</label></td>
				   <td><?php echo $this->form->getElement('email'); ?></td>
