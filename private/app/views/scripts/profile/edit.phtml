<script type="text/javascript" src="assets/js/jquery.uploadify.min.js"></script>
<script type="text/javascript">

$(function() {
    $('#file_upload').uploadify({
    	'buttonText' : 'Upload Profielfoto',
    	'swf'      : 'assets/swf/uploadify.swf',
    	'checkExisting' : 'check-exists',
        'uploader' : 'photo',
        'queueSizeLimit' : 1,
        'uploadLimit' : 1,
        'fileSizeLimit' : '150KB',
        'onUploadSuccess' : function(file, data, response) {
            $("#thumb").attr("src", "uploads/images/" + file.name);
        }
    });
});

</script>